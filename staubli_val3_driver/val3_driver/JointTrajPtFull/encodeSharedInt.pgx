<?xml version="1.0" encoding="utf-8" ?>
<Programs xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://www.staubli.com/robotics/VAL3/Program/2" >
  <Program name="encodeSharedInt" access="public" >
    <Parameters xmlns="http://www.staubli.com/robotics/VAL3/Param/1" >
      <Parameter name="x_nStatus" type="num" use="reference" xsi:type="element" dimensions="1" />
      <Parameter name="x_nOutputBuffer" type="num" use="reference" xsi:type="array" dimensions="1" />
      <Parameter name="x_nBufferPos" type="num" use="reference" xsi:type="element" dimensions="1" />
      <Parameter name="x_nSharedInt" type="num" use="value" xsi:type="element" dimensions="1" />
    </Parameters>
    <Locals>
      <Local name="l_nDWordBytes" type="num" xsi:type="array" size="4" />
      <Local name="i" type="num" xsi:type="array" size="1" />
    </Locals>
    <Code><![CDATA[begin
  if x_nStatus<0
    return
  endIf
  x_nStatus=-1
  x_nStatus=toBinary(x_nSharedInt,1,"-4l",l_nDWordBytes)
  if x_nStatus<0
    putln("Failed to encode shared int at index: "+toString("",x_nBufferPos))
    return
  endIf
  call copyArray(x_nOutputBuffer,x_nBufferPos,l_nDWordBytes)
end]]></Code>
  </Program>
</Programs>